\hypersetup{colorlinks=true, urlcolor=blue, linkcolor=black}

% ---------- Logo + Kopfzeile ----------
\newcommand{\HeaderLogo}{%
  \IfFileExists{docs/logo.png}{
    \includegraphics[height=1.1cm]{docs/logo.png}
  }{
    \IfFileExists{docs/logo.jpg}{
      \includegraphics[height=1.1cm]{docs/logo.jpg}
    }{}
  }%
}

\pagestyle{fancy}
\fancyhf{} % clear default
\fancyhead[L]{\textbf{\footnotesize Baustellenbegehung}}
\fancyhead[R]{\HeaderLogo}
\fancyfoot[L]{\scriptsize Erstellt: \today}
\fancyfoot[R]{\scriptsize Seite \thepage\ / \pageref{LastPage}}
\setlength{\headheight}{22pt} % genug Platz fürs Logo

% ---------- Überschriften ----------
\titleformat{\section}{\Large\bfseries\sffamily\color{black}}{}{0pt}{}
\titleformat{\subsection}{\large\bfseries\sffamily\color{gray!60!black}}{}{0pt}{}
