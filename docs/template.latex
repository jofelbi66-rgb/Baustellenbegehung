% ---------- Tabellen-Stil ----------
\renewcommand{\arraystretch}{1.3}
\rowcolors{2}{gray!10}{white}
\setlength{\tabcolsep}{6pt}

% ---------- Dokument ----------
$if(title)$
\title{\vspace{-2cm}\textbf{\Huge $title$}}
$endif$
$if(author)$
\author{$author$}
$endif$
$if(date)$
\date{$date$}
$else$
\date{}
$endif$

\begin{document}
